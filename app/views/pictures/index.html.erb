<h1>投稿一覧</h1>


  <div class="contents">
    <% @pictures.each do |picture| %>
    <div class="index_picture">
      <div class="index_user_name">ユーザー名：<%= picture.user.name %></div>
      <%= image_tag picture.image.url if picture.image.url %>
      <div class=""><%= picture.content if picture.content %></div>
      <div class="index_picture_menu">
        <div class="index_show"><%= link_to '詳細', picture_path(picture.id) %></div>
        <% if current_user.id == picture.user.id %>
        <div class="index_edit"><%= link_to "編集", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></div>
        <div class="index_destroy"><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></div>
        <% end %>
      </div>
    </div>
    <br>
    <% end %>
  </div>
